@model EmisoraVozDelEste.Models.Clientes

@{
    ViewBag.Title = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background-color: #0a1a2f;">
                    <h4 class="mb-0"><i class="fas fa-user me-2"></i> Detalles del Cliente</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4">Id:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioID)</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">Apellido:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>
                    </dl>

                    <div class="d-grid d-md-flex gap-2 mt-4">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.CI }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn text-white btn-sm", style = "background-color: #0a1a2f;" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

