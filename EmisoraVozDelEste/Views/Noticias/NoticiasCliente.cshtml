
@model IEnumerable<EmisoraVozDelEste.Models.Noticias>

@{
    ViewBag.Title = "Noticias";
}

<h2 class="text-center my-4">Últimas Noticias</h2>

<div class="row">
    @foreach (var noticia in Model)
    {
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Detalle", "Noticias", new { id = noticia.Id })" class="text-decoration-none text-dark">
                <div class="card noticia-hover h-100 shadow-sm">
                    <img src="@noticia.Imagen" class="noticia-img-top card-img-top" alt="@noticia.Titulo" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@noticia.Titulo</h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>


