@model EmisoraVozDelEste.Models.Noticias
@{
    ViewBag.Title = "Create";
}

<div class="container mt-5">
    
    @if (Session["Rol"] != null && Session["Rol"].ToString() == "Administrador")
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header text-white" style="background-color:#0a1a2f;">
                        <h4><i class="fas fa-plus me-2"></i> Crear Noticia</h4>
                    </div>

                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <h4>Noticias</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Titulo, new { @class = "form-label" })
                                @Html.EditorFor(m => m.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Titulo, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Contenido, new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.Contenido, 6, 0,
                                      new { @class = "form-control", style = "resize:vertical;" })
                                @Html.ValidationMessageFor(m => m.Contenido, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.FechaPublicacion, new { @class = "form-label" })
                                @Html.EditorFor(m => m.FechaPublicacion,
                                      new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                                @Html.ValidationMessageFor(m => m.FechaPublicacion, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Imagen, new { @class = "form-label" })
                                @Html.EditorFor(m => m.Imagen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Imagen, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-between">
                                <input type="submit" value="Crear" class="btn text-white" style="background-color:#0a1a2f;" />
                                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="alert alert-danger">No tiene permiso para acceder a este formulario.</p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
