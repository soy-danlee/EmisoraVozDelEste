
@{
    Layout = null;
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.0.0/mdb.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body, html {
            height: 100%;
            background-color: #0d1b2a; /* Azul oscuro */
        }

        .login-container {
            height: 80vh; /* en lugar de 100vh */
            display: flex;
            align-items: flex-start; /* o center, pero con menos altura */
            justify-content: center;
            padding-top: 80px; /* opcional, para darle espacio arriba */
        }

        .login-box {
            padding: 30px;
            background-color: #1b263b; /* Azul un poco más claro */
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(0,0,0,0.5);
            width: 100%;
            max-width: 400px;
            color: white;
        }

        .form-control, .form-control:focus {
            background-color: #415a77;
            color: white;
            border: none;
        }

        .form-label {
            color: #cbd5e1;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

        .typewriter {
            overflow: hidden;
            white-space: nowrap;
            border-right: 2px solid #66b2ff;
            animation: typing 3s steps(30, end), blink 0.75s step-end infinite;
            font-size: 1.8rem;
            width: fit-content;
            margin: 50px auto 20px;
            color: #66b2ff;
            text-align: center;
        
        }

        @@keyframes typing {
            from {
                width: 0
            }

            to {
                width: 20ch
            }
        }

        @@keyframes blink {
            0%, 100% {
                border-color: transparent
            }

            50% {
                border-color: #66b2ff
            }
        }

        .alert-warning {
            background-color: #ffc107;
            color: #1b263b;
        }
    </style>
</head>
<body>
    <h4 class="typewriter">Bienvenido a La Voz del Este</h4>
    <div class="login-container">
        <div class="login-box">
            <h4 class="text-center mb-4">Iniciar sesión</h4>

            @{
                ViewBag.Title = "Login";
            }


            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" name="username" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary mt-2">Ingresar</button>

                <p class="text-danger mt-2">@ViewBag.Message</p>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.0.0/mdb.min.js"></script>
</body>
</html>

