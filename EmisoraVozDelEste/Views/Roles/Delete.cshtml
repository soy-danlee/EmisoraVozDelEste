@model EmisoraVozDelEste.Models.Roles

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background-color: #0a1a2f;">
                    <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Eliminar Cliente</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-4">¿Estás seguro que deseas eliminar este cliente?</h5>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }

                <ul class="list-group mb-4">
                    <li class="list-group-item"><strong>Nombre del rol:</strong> @Html.DisplayFor(model => model.Nombre)</li>
                </ul>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Eliminar" class="btn text-white" style="background-color: #0a1a2f;" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
