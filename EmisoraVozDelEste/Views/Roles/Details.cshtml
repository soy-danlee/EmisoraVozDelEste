@model EmisoraVozDelEste.Models.Roles

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background-color: #0a1a2f;">
                    <h4 class="mb-0"><i class="fas fa-user me-2"></i> Detalles del Cliente</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4">Rol:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                        <dt class="col-sm-4">Permisos:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Permisos != null && Model.Permisos.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var p in Model.Permisos)
                                    {
                                        <li>@p.Nombre</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Sin permisos asignados</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-grid d-md-flex gap-2 mt-4">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn text-white btn-sm", style = "background-color: #0a1a2f;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
