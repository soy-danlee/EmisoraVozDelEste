

@model IEnumerable<EmisoraVozDelEste.Models.Roles>

@{
    ViewBag.Title = "Roles";
}

<h2>Listado de Roles</h2>

<p>
    @Html.ActionLink("Crear nuevo Rol", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre del Rol</th>
            <th>Permisos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.Nombre</td>
                <td>
                    @if (rol.Permisos != null && rol.Permisos.Any())
                    {
                        foreach (var permiso in rol.Permisos)
                        {
                            <span class="badge bg-primary me-1">@permiso.Nombre</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Sin permisos</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = rol.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = rol.Id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = rol.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

